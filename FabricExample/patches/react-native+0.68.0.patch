+  bool handled = false;
+  const EventTarget *eventTarget = rawEvent.eventTarget.get();
+  const std::string &type = rawEvent.type;
+  const ValueFactory &payloadFactory = rawEvent.payloadFactory;
+  for (auto const &listener : eventListeners_) {
